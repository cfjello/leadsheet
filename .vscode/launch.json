    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Deno RUN",
            "type": "node",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "C:\\Users\\claus\\.deno\\bin\\deno.exe",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect-brk",
                "--allow-all",
                "${file}"
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "RUN main.ts",
            "type": "node",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "C:\\Users\\claus\\.deno\\bin\\deno.exe",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect-brk",
                "--allow-all",
                "./main.ts"
            ],
            "attachSimplePort": 9229
        },
        {
            "name": "Deno TEST <file>",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "test", 
                "--inspect-brk",  
                "-A", 
                "--unstable", 
                "${workspaceFolder}/test/leadsheet.test.ts"
            ],
            "attachSimplePort": 9229
        },
    ],
